<%= render 'shared/errors', obj: @project %>
<%= form_for @project do |f| %>
  <div>
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>
  <div>
    <%= f.label :description %>
    <%= f.text_area :description, rows: 5 %>
  </div>
  <%= f.submit (@project.new_record? ? 'Create Project' : 'Update Project'), class: 'btn' %>
<% end %>
<%= link_to 'Back', :back %>
