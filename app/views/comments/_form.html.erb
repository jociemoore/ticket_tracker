<%= render 'shared/errors', obj: @comment %>
<%= form_for [@ticket, @comment] do |f| %>
  <div>
    <%= f.label :body, "Add a comment" %>
    <%= f.text_area :body, rows: 5 %>
  </div>
  <%= f.submit (@comment.new_record? ? 'Create Comment' : 'Update Comment') %>
  <span>or</span>
  <%= link_to 'Cancel', ticket_path(@ticket) %>
<% end %>
