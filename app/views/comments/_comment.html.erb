<div class='comment'>
  <p><%= comment.body %></p>
  <p>
    <i>posted by <%= comment.creator.name %> <%= how_long_ago(comment.created_at) %></i>
    <% if comment.updated? %>
      <i>- updated <%= how_long_ago(comment.updated_at) %></i>
    <% end %>
  </p>
  <%= link_to 'Edit', edit_ticket_comment_path(comment.ticket, comment) %>
</div>
